<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp"
    android:layout_margin="15dp"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0070253"
        >
        <TextView
            android:textColor="#b1ffffff"
            android:id="@+id/nam"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/unm"
            android:textColor="#b1ffffff"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_below="@+id/nam"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:layout_marginStart="20dp"
            android:id="@+id/dist"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:layout_below="@+id/unm"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:id="@+id/nme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nam"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:id="@+id/ume2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/unm"
            android:layout_below="@+id/nam"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:id="@+id/dtnce2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dist"
            android:layout_below="@+id/ume2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:layout_marginStart="20dp"
            android:id="@+id/age"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_below="@+id/dist"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:textColor="#b1ffffff"
            android:id="@+id/age2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/age"
            android:layout_below="@+id/dist"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            />
        <Button
            android:textColor="#b1ffffff"
            android:background="@drawable/borderbtn"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:layout_below="@+id/age"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"

            />
        <Button
            android:textColor="#b1ffffff"
            android:background="@drawable/borderbtn"
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATE"
            android:layout_toRightOf="@+id/status"
            android:layout_below="@+id/age2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"

            />
        <Button
            android:textColor="#b1ffffff"
            android:background="@drawable/borderbtn"
            android:id="@+id/chge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE DISTANCE"
            android:layout_toRightOf="@+id/locate"
            android:layout_below="@+id/age"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>